<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	metadata-complete="true" version="3.0">
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:/spring/*.root.xml</param-value>
	</context-param>

	<context-param>
		<param-name>enabledModules</param-name>

		<param-value>base,service,db,extension,security,hzserver,event,gid,export,oss,scheduler</param-value>
	</context-param>

	<listener>
		<listener-class>com.i360r.framework.spring.ModularizedContextLoaderListener</listener-class>
	</listener>

	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>securityFilterChainProxy</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

 	<filter>
        <filter-name>crosSupportedFilter</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>

	<filter-mapping>
		<filter-name>securityFilterChainProxy</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>crosSupportedFilter</filter-name>
		<url-pattern>/services/rs/oss/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>crosSupportedFilter</filter-name>
		<url-pattern>/services/rs/picture/*</url-pattern>
	</filter-mapping>

    <filter-mapping>
		<filter-name>crosSupportedFilter</filter-name>
		<url-pattern>/services/cd/inner/message/*</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>CXFServlet</servlet-name>
		<servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>CXFServlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LogServlet</servlet-name>
		<servlet-class>com.i360r.framework.log.logback.LogServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>LogServlet</servlet-name>
		<url-pattern>/LogServlet/*</url-pattern>
	</servlet-mapping>

    <servlet>
		<servlet-name>StateMonitorServlet</servlet-name>
		<servlet-class>com.i360r.framework.bean.context.monitor.StateMonitorServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>StateMonitorServlet</servlet-name>
		<url-pattern>/StateMonitorServlet/*</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>automaticCallServlet</servlet-name>
		<servlet-class>com.i360r.content.servlet.ServletProxy</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>automaticCallServlet</servlet-name>
		<url-pattern>/automatic/call</url-pattern>
	</servlet-mapping>

    <servlet>
		<servlet-name>jobTaskMonitorServlet</servlet-name>
		<servlet-class>com.i360r.framework.http.servlet.DelegatingServletProxy</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>jobTaskMonitorServlet</servlet-name>
		<url-pattern>/JobTaskMonitorServlet/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>
